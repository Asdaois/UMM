script/source = "extends Button

func _ready() -> void:
	assert(GameSignals.connect(\"enter_player_turn\", self, \"_enable_button\") == 0)
	assert(GameSignals.connect(\"exit_player_turn\", self, \"_disable_button\") == 0)

func _enable_button():
	self.disabled = false

func _disable_button():
	self.disabled = true

func _on_pressed() -> void:
	if Globals.moving_tile:
		Globals.moving_tile.stop_move_food()
	GameSignals.emit_signal(\"next_turn\")

"

